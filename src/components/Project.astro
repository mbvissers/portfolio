
---
interface Props {
  title: string,
  description: string,
  url: string,
}

const {title, description, url} = Astro.props
---


<li class="project">
  <h5 class="title">{title}</h5>
  <p class="description">{description}</p>
  <p class="link"><a href={url} target="_blank">Check it out!</a></p>
</li>

<style>
  @reference "../styles/global.css";

  li.project {
    @apply mb-4;
  }

  li.project > h5.title {
    @apply text-xl font-bold mb-2;
  }
</style>
